<Window x:Class="VoiceRecording.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoiceRecording"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Записать слово" Name="StartReconding" Click="StartReconding_Click"></Button>
        <Button Grid.Row="1" Content="Остановка записи" Name="StopRecording" Click='StopRecording_Click'></Button>
        <Button Grid.Row="2" Content="Воспроизвести запись" Name="PlayTheRecording" Click="PlayTheRecording_Click"></Button>
    </Grid>
</Window>
