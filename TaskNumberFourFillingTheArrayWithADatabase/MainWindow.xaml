<Window x:Class="TaskNumberFourFillingTheArrayWithADatabase.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="InkRecognition" Height="430" Width="630">
    <Canvas Name="theRootCanvas">
        <Border
      Background="White"
      BorderBrush="Black"
      BorderThickness="2"
      Height="300"
      Width="600"
      Canvas.Top="10"
      Canvas.Left="10">
            <InkCanvas Name="theInkCanvas" Margin="0,0,23,0" RenderTransformOrigin="0.447,0.48" />
        </Border>
        <TextBox Name="textBox1"
      Height="25"
      Width="225"
      Canvas.Top="325"
      Canvas.Left="10"></TextBox>
        <Button
      Height="25"
      Width="75"
      Canvas.Top="325"
      Canvas.Left="235"
      Click="buttonClick" Content="Распознать"></Button>
        <Button x:Name="btnClear" Content="Очистить канвас" Canvas.Left="10" Canvas.Top="367" Width="99" Click="btnClear_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnVoiceOver" Content="Произнести слово" Canvas.Left="160" Canvas.Top="367" Width="112" Click="btnVoiceOver_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="Добавить озвучку слова" Canvas.Left="391" Canvas.Top="328" Click="Button_Click" ></Button>
    </Canvas>
</Window>